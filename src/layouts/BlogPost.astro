---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---
<Layout title={frontmatter.title}>
  <div class="max-w-prose mx-auto px-4 mt-8 mb-12">
    <h1 class="text-3xl font-bold mb-2">{frontmatter.title}</h1>
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>

    <p class="text-gray-500 text-sm mt-6">Written {new Date(frontmatter.pubDate).toLocaleDateString()}</p>

    {frontmatter.tags && frontmatter.tags.length > 0 && (
      <div class="mt-2">
        <ul class="flex flex-wrap gap-2">
          {frontmatter.tags.map(tag => (
            <li class="bg-gray-200 text-gray-700 text-sm font-medium px-2.5 py-0.5 rounded">
              {tag}
            </li>
          ))}
        </ul>
      </div>
    )}

  </div>
</Layout>
