---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const postsByYear = posts.reduce((acc, post) => {
  const year = post.data.pubDate.getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {});
---
<Layout title="Archive">
  <div class="flex flex-col items-center max-w-prose mx-auto px-4 mt-8">
    <h1 class="text-3xl font-bold mb-8">Archive</h1>
    {
      Object.entries(postsByYear).map(([year, posts]) => (
        <div class="w-full mb-8">
          <h2 class="text-2xl font-bold mb-4">{year}</h2>
          <ul class="list-disc pl-5">
            {posts.map((post) => (
              <li class="mb-2">
                <a href={`/blog/${post.slug}`} class="text-lg text-gray-600 hover:text-gray-900">{post.data.title}</a>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</Layout>